<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ClickEventDemoActivity">

    <Button
        android:id="@+id/prevent_multiple_clicks_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Response First Click During 1s"/>

    <Button
        android:id="@+id/prevent_multiple_clicks_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Response Last Click During 1s"/>

    <Button
        android:id="@+id/prevent_multiple_clicks_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Response while clicks interval more than 1s"/>

    <Button
        android:id="@+id/delay_response_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Response After 1s"/>

</LinearLayout>
